@using PearlTech.Framework.Models
@model IEnumerable<PearlTech.Framework.Models.Customer>


@{
    ViewBag.Title = "Customer Information";
    Customer searchCustomer = new Customer { Id = 0, FirstName = "", LastName = "", Orders = null };
}

<h2>Customer Information</h2>

<div class="form-horizontal col-md-4 pull-right">
    <form method="GET">
        <fieldset>
            <legend>Search for Customer</legend>
            <div class="form-group">
                <label>First Name</label>
                @Html.TextBox("FirstName", searchCustomer.FirstName)
            </div>
            <div class="form-group">
                <label>Last Name</label>
                @Html.TextBox("LastName", searchCustomer.LastName)
            </div>
            <div class="form-group">
                <label>Customer Number</label>
                @Html.TextBox("CustomerNumber", searchCustomer.CustomerNumber)
            </div>
            <div class="form-group">
                <input type="submit" value="Search Customers"/>
            </div>
        </fieldset>
    </form>
</div>


<p>
    @Html.ActionLink("Create New Customer", "Create")
</p>
<table class="table" id="customer-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
